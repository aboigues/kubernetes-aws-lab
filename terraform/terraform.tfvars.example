# Copy this file to terraform.tfvars and customize as needed

# AWS Region
aws_region = "eu-west-1"

# Session Configuration (IMPORTANT for cost tracking)
# This should match your session directory name in participants/
# Example: participants/session-121323-nov2025/
# Leave empty ("") to use participants at root level
session_name = "session-121323-nov2025"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-west-1a", "eu-west-1b"]

# Security Configuration
# Restrict SSH access to specific IP ranges (recommended for production)
# Default: ["0.0.0.0/0"] allows from anywhere
allowed_ssh_cidrs = ["0.0.0.0/0"]

# Restrict Kubernetes API access to specific IP ranges
# Default: ["0.0.0.0/0"] allows from anywhere
allowed_api_cidrs = ["0.0.0.0/0"]

# Example: Restrict to office/VPN IP range
# allowed_ssh_cidrs = ["203.0.113.0/24", "198.51.100.0/24"]
# allowed_api_cidrs = ["203.0.113.0/24"]

# EC2 Instance Types
instance_type_master = "t3.medium"  # 2 vCPU, 4 GB RAM
instance_type_worker = "t3.small"   # 2 vCPU, 2 GB RAM

# Cluster Configuration
worker_count       = 2
kubernetes_version = "1.28"

# Project Name (used for resource naming and tagging)
project_name = "k8s-lab"
